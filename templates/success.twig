{% extends '_shared/_layout.twig' %}

 {% block main %}
   {% set order = craft.orders()
     .isCompleted(true)
     .orderBy('dateOrdered DESC')
     .one() %}

   {% if order %}
     <section class="container">
       <h1>Your Completed Order</h1>

       <ul>
         <strong>Order #{{ order.number }}</strong>

         {% for item in order.lineItems %}
           <li>
             ({{ item.qty }}) {{ item.snapshot.title }} â€“ {{ item.subtotal | commerceCurrency }}
           </li>
         {% endfor %}
       </ul>

     </section>
   {% else %}
     <p>No completed orders found.</p>
   {% endif %}
 {% endblock %}
