{% set cart = craft.commerce.carts.cart %}
{% set mollieGateway = craft.commerce.gateways.getGatewayByHandle('mollie') %}

{{ dump(mollieGateway) }}

<!-- Cart Button -->
<button class="js-open c-cart__button">
  ðŸ›’ Cart ({{ cart.totalQty ?? 0 }})
</button>

<!-- Offcanvas Cart -->
<div class="c-cart js-canvas">
  <div class="c-cart__header">
    <h2>Your Cart</h2>
    <button class="js-close">&times;</button>
  </div>

  <div class="c-cart__body">
    <ul>
      {% for lineItem in cart.lineItems %}
        <li>
          ({{ lineItem.qty }}) {{ lineItem.sku }} -
          {{ (lineItem.price * lineItem.qty) | currency }}
        </li>
      {% else %}
        <li>Your cart is empty.</li>
      {% endfor %}
    </ul>

    <hr>

    <p>
      <strong>Qty:</strong> {{ cart.totalQty ?? 0 }}<br>
      <strong>Total:</strong> {{ cart.totalPrice | currency }}
    </p>
  </div>
</div>

<!-- Overlay -->
<div class="js-overlay c-cart__overlay u-hidden"></div>
