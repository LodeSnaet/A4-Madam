{% extends '_shared/_layout.twig' %}

{% block main %}
  {# Initial setup, once at the top #}
  {% set blogState = {
    index: 0,
    blogs: home.blogs.orderBy('postDate desc').all()
  } %}

  {# Blog 1 #}
  {% set blog = blogState.blogs[blogState.index] ?? null %}
  {% if blog %}
    {% include 'sections/blogs/blog.twig' with blog %}
    {% set blogState = blogState|merge({ index: blogState.index + 1 }) %}
  {% endif %}


  {# Blog 2 #}
  {% set blog = blogState.blogs[blogState.index] ?? null %}
  {% if blog %}
    {% include 'sections/blogs/blog.twig' with blog %}
    {% set blogState = blogState|merge({ index: blogState.index + 1 }) %}
  {% endif %}





{% endblock %}