<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>Welcome to Craft CMS</title>
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
    {{ craft.vite.script('/src/js/app.js', true) }}
</head>
<body>
<nav class="c-navbar">
    {% set transform = 'img2Webp' %}
    <img class="c-navbar__logo" src="{{ navbar.logo[0].getUrl(transform) }}" alt="{{ navbar.logo[0].title }}"
         width="{{ navbar.logo[0].getWidth(transform) }}" height="{{ navbar.logo[0].getHeight(transform) }}">

    <ul class="c-navber__menu c-navbar__menu--{{ navbar.menuLayout }}">
        {% include '_shared/_menu' %}
    </ul>

    <i class="fa-solid fa-{{ navbar.search }}"></i>

    {% include '_components/_cart.twig' %}
</nav>

{% block main %}

{% endblock %}

<footer>
    {% include '_shared/_menu' %}
</footer>
</body>

</html>